{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2019", "es2020", "es2021", "DOM"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
