{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["./node_modules/.prisma/client/index"]
    }
  },
  "include": ["server/**/*", "prisma/**/*"],
  "exclude": ["node_modules"]
}
