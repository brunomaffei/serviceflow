{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2019", "es2020", "es2021"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
